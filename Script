local player = game.Players.LocalPlayer
local camera = workspace.CurrentCamera

-- Create the HUD
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 400)
frame.Position = UDim2.new(0.05, 0, 0.1, 0)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 2
frame.Parent = screenGui
frame.Active = true
frame.Draggable = true -- Makes the HUD movable

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0.1, 0)
title.BackgroundTransparency = 1
title.Text = "Object & NPC List"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.SourceSansBold
title.TextScaled = true
title.Parent = frame

local searchBox = Instance.new("TextBox")
searchBox.Size = UDim2.new(1, -10, 0.1, 0)
searchBox.Position = UDim2.new(0, 5, 0.12, 0)
searchBox.PlaceholderText = "Search..."
searchBox.Text = ""
searchBox.Font = Enum.Font.SourceSans
searchBox.TextScaled = true
searchBox.Parent = frame

local scrollFrame = Instance.new("ScrollingFrame")
scrollFrame.Size = UDim2.new(1, -10, 0.75, 0)
scrollFrame.Position = UDim2.new(0, 5, 0.25, 0)
scrollFrame.CanvasSize = UDim2.new(0, 0, 10, 0)
scrollFrame.BackgroundTransparency = 1
scrollFrame.Parent = frame

local uiListLayout = Instance.new("UIListLayout")
uiListLayout.Parent = scrollFrame
uiListLayout.SortOrder = Enum.SortOrder.Name

-- Function to update the list
local function updateList()
    for _, child in pairs(scrollFrame:GetChildren()) do
        if child:IsA("TextLabel") then
            child:Destroy()
        end
    end

    for _, obj in pairs(workspace:GetDescendants()) do
        if obj:IsA("BasePart") or (obj:IsA("Model") and obj:FindFirstChildOfClass("Humanoid")) then
            local objName = obj.Parent and obj.Parent:IsA("Model") and obj.Parent.Name or obj.Name

            local label = Instance.new("TextLabel")
            label.Size = UDim2.new(1, 0, 0, 30)
            label.BackgroundTransparency = 1
            label.Text = objName
            label.TextColor3 = Color3.fromRGB(255, 255, 255)
            label.Font = Enum.Font.SourceSans
            label.TextScaled = true
            label.Parent = scrollFrame
        end
    end
end

-- Search function
searchBox.Changed:Connect(function(property)
    if property == "Text" then
        for _, label in pairs(scrollFrame:GetChildren()) do
            if label:IsA("TextLabel") then
                label.Visible = label.Text:lower():find(searchBox.Text:lower()) ~= nil
            end
        end
    end
end)

-- Auto-update list every 5 seconds
while true do
    updateList()
    wait(5)
end
